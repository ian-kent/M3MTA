{
    "smtp": {
        "hostname": "YOUR.DOMAIN",
        "ports": [ 25 ],

        "backend": "M3MTA::Server::Backend::MongoDB::SMTP",

        "relay": {
            "auth": 1,
            "anon": 0 
        },

        "database": {
            "hostname": "127.0.0.1",
            "username": null,
            "password": null,
            "database": "m3mta",
            "queue": { "collection": "queue" },
            "mailboxes": { "collection": "mailboxes" },
            "domains": { "collection": "domains" }
        },

        "commands": {
            "vrfy": 0,
            "expn": 0
        }
    },
    "mda": {
        "hostname": "YOUR.DOMAIN",
        "postmaster": "M3MTA Postmaster <postmaster@YOUR.DOMAIN>",

        "backend": "M3MTA::Server::Backend::MongoDB::MDA",

        "filters": [
            "M3MTA::MDA::SpamAssassin"
        ],

        "database": {
            "hostname": "127.0.0.1",
            "username": null,
            "password": null,
            "database": "m3mta",
            "queue": { "collection": "queue" },
            "mailboxes": { "collection": "mailboxes" },
            "domains": { "collection": "domains" },
            "store": { "collection": "store" }
        },

        "retry": {
            "durations": [
                {
                    "after": 900,
                    "notify": 0
                },
                {
                    "after": 900,
                    "notify": 0
                },
                {
                    "after": 1800,
                    "notify": 0
                },
                {
                    "after": 7200,
                    "notify": 1
                },
                {
                    "after": 32400,
                    "notify": 0
                },
                {
                    "after": 43200,
                    "notify": 0
                },
                {
                    "after": 86400,
                    "notify": 1
                },
                {
                    "after": 172800,
                    "notify": 0
                },
                {
                    "after": 259200,
                    "notify": 0
                }
            ]
        }
    },
    "imap": {
        "hostname": "YOUR.DOMAIN",
        "ports": [ 143 ],

        "backend": "M3MTA::Server::Backend::MongoDB::IMAP",

        "field_separator": "/",
        "database": {
            "hostname": "127.0.0.1",
            "username": null,
            "password": null,
            "database": "m3mta",
            "store": { "collection": "store" },
            "mailboxes": { "collection": "mailboxes" }
        }
    }
}
