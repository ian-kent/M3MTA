#!/usr/local/bin/perl

use Config::Any;
use Getopt::Long;
use M3MTA::Daemon;
use M3MTA::Server::IMAP;
use Modern::Perl;

my ($stop, $daemon, $config, $pidfile, $logfile);
GetOptions(
    'stop' => \$stop,
    'daemon' => \$daemon,
    'config=s' => \$config,
    'pidfile=s' => \$pidfile,
    'logfile=s' => \$logfile,
);

my $imap_daemon = M3MTA::Daemon->new(
    name => 'M3MTA-IMAP',
    pidfile => $pidfile,
    stdout => $logfile ? "$logfile.out" : undef,
    stderr => $logfile ? "$logfile.err" : undef,
    daemon => $daemon ? 1 : 0,
);

exit $imap_daemon->stop if $stop;

$imap_daemon->start(
    begin => sub {
        print "Starting IMAP daemon\n";
        $config ||= 'imap.json';
        my $cfg = Config::Any->load_files({ files => [$config], use_ext => 1 })->[0]->{$config};
        M3MTA::Server::IMAP->new(config => $cfg)->start;
    }
);