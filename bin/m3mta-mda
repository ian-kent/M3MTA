#!/usr/local/bin/perl

use M3MTA::Config;
use M3MTA::Daemon;
use M3MTA::MDA;
use Getopt::Long;
use Modern::Perl;

my ($stop, $daemon, $config, $pidfile, $logfile);
GetOptions(
    'stop' => \$stop,
    'daemon' => \$daemon,
    'config=s' => \$config,
    'pidfile=s' => \$pidfile,
    'logfile=s' => \$logfile,
);

my $mda_daemon = M3MTA::Daemon->new(
    name => 'M3MTA-MDA',
    pidfile => $pidfile,
    stdout => $logfile ? "$logfile.out" : undef,
    stderr => $logfile ? "$logfile.err" : undef,
    daemon => $daemon ? 1 : 0,
);

exit $mda_daemon->stop if $stop;

$mda_daemon->start(
    begin => sub {   
        print "Starting MDA daemon\n";
        $config ||= 'mda.json';
        my $cfg = M3MTA::Config->new(filename => $config)->load;
        M3MTA::MDA->new(config => $cfg)->block;
    }
);