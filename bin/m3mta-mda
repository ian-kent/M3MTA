#!/usr/local/bin/perl

use M3MTA::Daemon;
use M3MTA::MDA;
use Getopt::Long;

my ($stop, $daemon, $config, $pidfile, $logfile);
GetOptions(
    'stop' => \$stop,
    'daemon' => \$daemon,
    'config=s' => \$config,
    'pidfile=s' => \$pidfile,
    'logfile=s' => \$logfile,
);

my $mda_daemon = M3MTA::Daemon->new(
    name => 'M3MTA-MDA',
    pidfile => $pidfile,
    stdout => $logfile ? "$logfile.out" : undef,
    stderr => $logfile ? "$logfile.err" : undef,
);

exit $mda_daemon->stop if $stop;

$mda_daemon->start(
    begin => sub {        
        print "Starting MDA daemon\n";
        $config ||= 'config.json';

        # Load configuration
        my $cfg = Config::Any->load_files({ files => [$config], use_ext => 1 })->[0]->{$config};

        # Start the delivery agent (never returns)
        M3MTA::MDA->new(config => $cfg)->block;
    }
);