#!/usr/local/bin/perl

use Config::Any;
use Getopt::Long;
use M3MTA::Daemon;
use M3MTA::Server::SMTP;
use Modern::Perl;

my ($stop, $daemon, $config, $pidfile, $logfile);
GetOptions(
    'stop' => \$stop,
    'daemon' => \$daemon,
    'config=s' => \$config,
    'pidfile=s' => \$pidfile,
    'logfile=s' => \$logfile,
);

my $smtp_daemon = M3MTA::Daemon->new(
    name => 'M3MTA-SMTP',
    pidfile => $pidfile,
    stdout => $logfile ? "$logfile.out" : undef,
    stderr => $logfile ? "$logfile.err" : undef,
);

exit $smtp_daemon->stop if $stop;

$smtp_daemon->start(
    begin => sub {
		print "Starting SMTP daemon\n";
		$config ||= 'config.json';
		my $cfg = Config::Any->load_files({ files => [$config], use_ext => 1 })->[0]->{$config}->{smtp};
		M3MTA::Server::SMTP->new(config => $cfg)->start;
	}
);